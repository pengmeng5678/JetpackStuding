<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="bindingBean"
            type="www.qihan.cn.jetpackstuding.databinding.DataBindingBean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".databinding.DataBindingActivity">
        <TextView
            android:id="@+id/tv_bingding_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{bindingBean.msg}"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints">
        </TextView>
        <Button
            android:id="@+id/bt_bingding_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_bingding_msg"
            app:layout_constraintLeft_toRightOf="@id/tv_bingding_msg"
            android:text="RightButton"
            android:textSize="20dp"
            tools:ignore="MissingConstraints">
        </Button>
        <Button
            android:id="@+id/bt_bingding_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_bingding_msg"
            app:layout_constraintRight_toLeftOf="@id/tv_bingding_msg"
            android:text="leftButton"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/tv_bingding_msg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bias test2"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.402"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.694"
            tools:ignore="MissingConstraints"></TextView>
        <Button
            android:id="@+id/bt_bingding_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.8"
            android:onClick="BtDatabindingCenter"
            android:text="@{Integer.toString(bindingBean.type1)}"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"/>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_bingding_center"
            app:layout_constraintVertical_chainStyle="packed"
            android:tint="@{bindingBean.type1 > 5 ? @color/star : @android:color/black}"
            app:srcCompat="@{bindingBean.type1 &lt; 9 ? @drawable/ic_person_black_96dp : @drawable/ic_whatshot_black_96dp }"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>